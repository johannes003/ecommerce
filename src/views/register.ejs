<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="website icon" type="png" href="images/brandmark@2x-8.png" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/register.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <script src="/js/registerValidation.js" defer></script>
    <title>Bijou Boutique</title>
  </head>
  <body>
    <%- include("partials/header.ejs", { user: user }) %> <% if (errors) { %> <%
    for (let oneError in errors) { %> <% } %> <% } %>
    <main class="container-register">
      <div class="form">
        <form
          action="/register"
          method="POST"
          enctype="multipart/form-data"
          id="registerForm"
        >
          <h2 class="title">Registrar usuario</h2>
          <% if (errors && errors.name) { %>
          <div class="text-danger"><%= errors.name.msg %></div>
          <% } %>
          <input
            class="controls"
            id="name"
            name="name"
            type="text"
            placeholder="Nombre"
          />
          <% if (errors && errors.surname) { %>
          <div class="text-danger"><%= errors.surname.msg %></div>
          <% } %>
          <input
            class="controls"
            id="surname"
            name="surname"
            type="text"
            placeholder="Apellido"
          />
          <% if (errors && errors.password) { %>
          <div class="text-danger"><%= errors.password.msg %></div>
          <% } %>
          <div class="password-container">
            <input
              class="controls pass-control"
              id="pass"
              name="password"
              type="password"
              placeholder="ContraseÃ±a"
            />
            <i id="bx" class="bx bx-show-alt toggle-password"></i>
          </div>
          <% if (errors && errors.email) { %>
          <div class="text-danger"><%= errors.email.msg %></div>
          <% } %>
          <input
            class="controls"
            id="mail"
            name="email"
            type="email"
            placeholder="E-mail"
          />

          <% if (errors && errors.role) { %>
          <div class="text-danger"><%= errors.role.msg %></div>
          <% } %>
          <select class="controls" id="role" name="role">
            <option value="user">Usuario</option>
            <option value="admin">Administrador</option>
          </select>

          <br />
          <input type="file" name="image" />
          <input class="submit" type="submit" />
          <input
            class="submit reset"
            type="reset"
            onclick="alert('Datos reestablecidos')"
          />
        </form>
      </div>
    </main>
    <%- include("partials/footer.ejs") %>
    <script src="/js/validate.js"></script>
  </body>
</html>
